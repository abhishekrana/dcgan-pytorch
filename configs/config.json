{
    "name": "exp_cifar10",
    "cuda": false,
    "gpu": 0,
	"output_dir":"output",
	"seed": 7,

    "data_handler": {
        "data_dir": "datasets/",
        "data_name": "cifar10",
        "batch_size": 2,
        "shuffle": true,
		"num_workers": 4
    },
    "validation": {
        "validation_split": 0.1,
        "shuffle": true
    },

    "lr_scheduler_type": "ExponentialLR",
    "lr_scheduler_freq": 1,
    "lr_scheduler": {
            "gamma": 0.8685113737513527
    },

    "nz": 100,
    "ngf": 64,
    "ndf": 64,
	"nc": 3,
	"ngpu": 1,

	"netG": "",
	"netD": "",

    "optimizer_type": "Adam",
    "optimizer": {
        "lr": 0.0002,
        "beta1": 0.5
    },

    "loss": "my_loss",
    "metrics": ["my_metric", "my_metric2"],
    "trainer": {
        "epochs": 25,
        "save_dir": "saved/",
        "save_freq": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "arch": "MnistModel", 
    "model": {

    }
}
